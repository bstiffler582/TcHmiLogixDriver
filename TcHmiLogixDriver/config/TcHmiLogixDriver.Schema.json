{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "target": {
      "type": "object",
      "properties": {
        "targetAddress": {
          "type": "string",
          "description": "IP or hostname of Logix device",
          "default": "192.168.0.100"
        },
        "targetSlot": {
          "type": "string",
          "description": "Slot or path to CLX CPU",
          "default": "1,0"
        },
        "timeout": {
          "type": "integer",
          "description": "Connection timeout (ms)",
          "default": 1000
        },
        "tagBrowser": {
          "type": "boolean",
          "description": "Use online tag browser",
          "default": false
        },
        "tagProgramFilter": {
          "type": "string",
          "description": "Filter the tag browser to only show tags from a certain program (e.g. 'Program:HMI'). A value of '*' or '' loads all program and controller tags.",
          "default": "*"
        },
        "tagDefinitionCache": {
          "type": "string",
          "description": "Cached tag definition data for offline use",
          "default": "",
          "visibility": "AlwaysHide"
        }
      },
      "required": [ "targetAddress", "targetSlot", "timeout", "tagBrowser", "tagFilterSelector" ]
    }
  },
  "properties": {
    "Targets": {
      "configDescription": "Logix targets",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/target"
      }
    }
  },
  "additionalProperties": false
}